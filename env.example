# Environment Configuration for MEV Bot
# Copy this file to .env and fill in your values

# Node Environment
NODE_ENV=development
LOG_LEVEL=info

# Database Configuration (SQLite)
DATABASE_PATH=./data/mev_bot.db

# RPC URLs - Replace with your actual RPC endpoints
# Ethereum
ETHEREUM_RPC_HTTP=https://eth-mainnet.alchemyapi.io/v2/YOUR_API_KEY
ETHEREUM_RPC_WS=wss://eth-mainnet.ws.alchemyapi.io/v2/YOUR_API_KEY

# Arbitrum
ARBITRUM_RPC_HTTP=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ARBITRUM_RPC_WS=wss://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Polygon
POLYGON_RPC_HTTP=https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
POLYGON_RPC_WS=wss://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# Base
BASE_RPC_HTTP=https://mainnet.base.org
BASE_RPC_WS=wss://mainnet.base.org

# Alert Configuration (Optional)
ALERT_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
ALERT_DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_DISCORD_WEBHOOK
ALERT_TELEGRAM_BOT_TOKEN=YOUR_TELEGRAM_BOT_TOKEN
ALERT_TELEGRAM_CHAT_ID=YOUR_TELEGRAM_CHAT_ID

# Trading Configuration
MIN_PROFIT_THRESHOLD=2.0
MAX_GAS_COST=100
MIN_LIQUIDITY_THRESHOLD=10000

# System Configuration
PRICE_UPDATE_INTERVAL=1000
HEALTH_CHECK_INTERVAL=30000
MAX_RETRIES=3
CONNECTION_TIMEOUT=10000

# API Keys (Optional)
ETHERSCAN_API_KEY=YOUR_ETHERSCAN_API_KEY
POLYGONSCAN_API_KEY=YOUR_POLYGONSCAN_API_KEY
ARBISCAN_API_KEY=YOUR_ARBISCAN_API_KEY
BASESCAN_API_KEY=YOUR_BASESCAN_API_KEY 